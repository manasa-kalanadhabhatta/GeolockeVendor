<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ChooseTypeFragment"
            android:columnCount="2"
            android:rowCount="1"
            android:background="@color/accent_material_dark"
            android:useDefaultMargins="true"
            android:padding="5dp"
            android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Circular&#10;Geofence"
        android:id="@+id/circularGeofenceButton"
        android:layout_column="0"
        android:layout_row="0"
        android:onClick="selectCircular"
        android:background="@color/accent_material_light"
        android:padding="5dp"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Polygonal&#10;Geofence"
        android:id="@+id/polygonalGeofenceButton"
        android:layout_column="1"
        android:layout_row="0"
        android:onClick="selectPolygonal"
        android:background="@color/accent_material_light"
        android:padding="5dp"
        android:layout_columnWeight="1"
        android:layout_margin="10dp"/>
</GridLayout>
